{
  "Routes": [
    // ---- USERS: públicas (login / register) ----
    {
      "DownstreamPathTemplate": "/api/users/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/users/login",
      "UpstreamHttpMethod": [ "POST" ],
      "Priority": 100
    },
    {
      "DownstreamPathTemplate": "/api/users/register",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/users/register",
      "UpstreamHttpMethod": [ "POST" ],
      "Priority": 100
    },

    // ---- USERS: todo lo demás con JWT ----
    {
      "DownstreamPathTemplate": "/api/users/{**catchAll}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/users/{**catchAll}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "Priority": 10
    },

    // ---- PRODUCTS: TODO con JWT (incluye /all, /create, /update/{id}, /delete/{id}, /{id}) ----
    {
      "DownstreamPathTemplate": "/api/products/{**catchAll}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/products/{**catchAll}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "Priority": 10
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000",
    "RouteIsCaseSensitive": false
  }
}
